extends ../layouts/managerLayout
block content

    .mt-20
        a.sec-blue-link(href="#")#alert1 召唤提示框-标准
        a.sec-blue-link.ml-20(href="#")#alert2 召唤成功提示框-单行
        a.sec-blue-link.ml-20(href="#")#alert3 召唤错误提示框-多行

    script.
        require(['jquery', 'window'], function ($, UIWindow) {
            $('#alert1').click(function () {
                UIWindow.confirm({
                    type: 'confirm', //对话框类型，可选值为:'success','warning','error','confirm'
                    title: '操作提示', // 单独设置对话框标题 msg标题继承之
                    msgTitle:'确定删除当前版本记录？',
                    message: '删除后不可恢复', //消息内容
                    okText: '确认', //确定按钮文本内容
                    cancelText: '取消' //取消文本内容
                }).then(function (result){
                    console.log(result);
                });
            });

            $('#alert2').click(function () {
                UIWindow.alert({
                    type: 'success', //对话框类型，可选值为:'success','warning','error','confirm'
                    okText: '好的', //确定按钮文本内容
                    message: '恭喜，操作成功！' // 消息标题
                }).then(function (result) {
                    console.log(result);
                })
            });

            $('#alert3').click(function () {
                UIWindow.confirm({
                    type: 'error', //对话框类型，可选值为:'success','warning','error','confirm'
                    title: '出错啦', // 单独设置对话框标题 msg标题继承之
                    msgTitle: '远程服务器出现不明错误！',
                    message: '这里要描述清楚出错原因，为啥子错误；以及应该如何操作可以接下来避免这个错误，引导用户做你想让他做的操作。', //消息内容
                    okText: '确认', //确定按钮文本内容
                    cancelText: '取消' //取消文本内容
                }).then(function (result) {
                    console.log(result);
                });
            });
        });
